{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "CommonJS",                        
    "moduleResolution": "Node",                  
    "lib": ["ES2020"],                           
    "outDir": "./dist",                          
    "rootDir": "./src",                          
    "removeComments": false,                     
    "noEmitOnError": true,                       

    "strict": true,                              
    "noImplicitAny": true,                       
    "strictNullChecks": true,                    
    "noImplicitThis": true,                      
    "alwaysStrict": true,                        

    "resolveJsonModule": true,                   
    "esModuleInterop": true,                     
    "allowSyntheticDefaultImports": true,        
    "baseUrl": "./",                            
    "paths": {                                  
      "@/*": ["src/*"]
    },

    "declaration": true,                         
    "declarationMap": false,                     
    "sourceMap": false,                          
    "types": ["node"],                           
    "typeRoots": ["node_modules/@types"],       

    "skipLibCheck": true,                        
    "forceConsistentCasingInFileNames": true,   
    "skipDefaultLibCheck": true,        
  },
  "include": [
    "src/**/*"                                  
  ],
  "exclude": [
    "node_modules",                              
    "dist",                                      
    "test.js",                                  
    "**/*.spec.ts"                              
  ]
}